@model AnnouncementNewVM
@{
    ViewData["Title"] = "NewAnnouncement";

}

@section Styles{
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <style>
        .note-toolbar {
            background: lightgray !important;
        }

        .note-editable {
            background: white !important;
        }

        .note-btn {
            background: white !important;
        }

        .frame {
            background: white;
            padding: 15px;
            border: 1px solid lightgray;
        }

        .owner {
            background: whitesmoke;
            padding: 10px;
            text-align: center;
            margin-bottom: 10px;
            margin-left: -15px;
            margin-right: -15px;
            margin-top: -15px;
        }
    </style>
}


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>$(document).ready(function () {
            $('#summernote').summernote();
        });</script>
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Home", "Dashboard")">Radna ploča</a>
            <i class="fa fa-arrow-circle-right"></i>
        </li>
        <li>
            <span>Nova obavijest</span>
        </li>
    </ul>
</div>

<h1 class="page-title">
    Nova obavijest
    <small></small>
</h1>
<div class="row">
    <form asp-action="New" method="post" class="col-md-12" style="display:flex">
        <div class="col-md-8 frame">
            <div class="owner">
                <strong>@ViewBag.Name</strong> piše novu obavijest
            </div>

            <div class="form-group col-md-7 no-padding">
                <label asp-for="@Model.Title">Naslov</label>
                <input asp-for="@Model.Title" class="form-control" />
            </div>

            <div class="form-group col-md-12 no-padding">
                <label asp-for="@Model.ShortDescription">Kratak opis</label>
                <input asp-for="@Model.ShortDescription" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label"></label>
                <textarea asp-for="@Model.Description" id="summernote"></textarea>
            </div>

            <div style="text-align:right">
                <button class="btn btn-sm btn-info">Odustani</button>
                <button class="btn btn-sm blue" type="submit">Snimi</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="c-white" style="font-size: 19px;">Vidljivost/Dostupnost</label>
                <select class="form-control" asp-for="@Model.AnnouncementFilterID" asp-items="@Model.AnnouncementFilter">
                    <option>Odaberite tip dostupnosti</option>
                </select>
            </div>
        </div>

    </form>
</div>

