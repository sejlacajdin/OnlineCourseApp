@model List<CourseParticipantsVM>
@{
    ViewData["Title"] = "CourseParticipantsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int courseID = ViewBag.CourseID;
}

    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("CourseApplications", "Course")">Prijave</a>
                <i class="fa fa-chevron-right"></i>
            </li>
            <li>
                <span>Lista prijavljenih</span>
            </li>
        </ul>
    </div>

<div class="card card-body">
    <table class="table table-sm">
        <thead>
            <tr>
                <th>ID broj</th>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.StudentIDNumber</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td><a href="@Url.Action("DeleteParticipantAdmin","CourseParticipant",new { paxID = item.CoursePaxID, courseID = courseID})"><i class="fa fa-trash-o"></i></a></td>
            </tr>
            }
        </tbody>
    </table>
</div>
