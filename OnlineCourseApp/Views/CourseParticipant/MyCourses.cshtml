@model List<CourseVM>
@{
    ViewData["Title"] = "MyCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Home", "Dashboard")">Radna ploča</a>
            <i class="fa fa-chevron-right"></i>
        </li>
        <li>
            <span>Kursevi</span>
        </li>
    </ul>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">

            @foreach (CourseVM x in Model)
            {
                @if (x.CourseName != null)
                {

                    <div class="mt-4 col-sm-4">
                        <div class="project-box">
                            <h6>@x.CourseName</h6>
                            <div class="media" style="border-bottom: 1px solid rgb(244, 244, 244);">
                                <div class="media-body" style="padding-bottom: 0.5rem;">
                                    <div style="margin-bottom: 1.55rem;">
                                        <p>@x.CourseSection</p>
                                    </div>
                                    <div style=" margin-bottom: 1.55rem;">
                                        <p>@x.Notes</p>
                                    </div>
                                    <p class="f-12 date" style="text-align: right;">@x.Start.ToShortDateString() - @x.End.ToShortDateString()</p>
                                </div>
                            </div>
                            <div class="row" style="margin-top: 20px;">
                                <div class="col-12">
                                    <a href="@Url.Action("Detalji","CourseParticipant",new { courseID=x.CourseID})" class="btn btn-outline-primary btn-block btn-sm" style="padding: 0.375rem 0.75rem; color: #007bff;">Detalji</a>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>
<style>
    label {
        margin-bottom: 0px;
    }

    .container-fluid {
        padding: 15px;
        background: white;
        margin-bottom: 25px;
        border: 1px solid #dee2e6;
        border-radius: 10px;
    }

    .btn-popup {
        width: 100%;
    }

    .project-box {
        border: 1px solid #efefef;
        border-radius: 5px;
        padding: 30px;
        background-color: #fff;
    }

    .btn-outline-primary:hover {
        color: white !important;
    }
</style>