@model List<CourseVM>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Home", "Dashboard")">Radna ploča</a>
            <i class="fa fa-chevron-right"></i>
        </li>
        <li>
            <span>Prijave</span>
        </li>
    </ul>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">

            @foreach (CourseVM x in Model)
            {
                @if (x.CourseName != null)
                {

                    <div class="mt-4 col-sm-4">
                        <div class="project-box">
                            <h6 style="margin-bottom: 0.1rem;">@x.CourseName</h6>
                            <div class="media" style="border-bottom: 1px solid rgb(244, 244, 244);">
                                <div class="media-body" style="padding-bottom: 0.5rem;">
                                    <div style="margin-bottom: 1rem;">
                                        <p style="font-size: 0.8rem;">@x.CourseSection</p>
                                    </div>
                                    <div style=" margin-bottom: 1rem;">
                                        <p>@x.Notes</p>
                                    </div>
                                    <p class="f-12 date" style="text-align: right;">@x.Start.ToShortDateString() - @x.End.ToShortDateString()</p>
                                </div>
                            </div>
                            <div class="row" style=" margin-top: 20px;">
                                <div class="col-sm-6 col-3">
                                    <a class="btn btn-outline-primary btn-block btn-sm" style="padding: 0.375rem 0.75rem; color: #007bff;" href="@Url.Action("CourseParticipantsList","CourseParticipant", new { courseID = x.CourseID})">Prijavljeni</a>
                                </div>
                                <div class="col-sm-6 col-3">
                                    <a class="btn btn-outline-danger btn-block btn-sm" style="padding: 0.375rem 0.75rem;" href="/Course/Obrisi?CourseID=@x.CourseID">Obriši</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>







