@model List<SelectListItem>

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Prikaz", "City")">Gradovi</a>
            <i class="fa fa-chevron-right"></i>
        </li>
        <li>
            <span>Regije</span>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <button style="width:100%;" class="btn btn-primary btn-popup" data-container="body" data-modaltitle="Dodaj opštinu" data-url="@Url.Action("DodajForma","Region")"><i class="fa fa-plus-circle"></i> Dodaj regiju</button>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered" style="background:white;">
            <thead>
                <tr>
                    <th scope="col">Naziv regije</th>
                    <th scope="col">Akcija</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SelectListItem x in Model)
                {
                    @if (x.Text != null)
                    {
                        <tr>
                            <td>  @x.Text </td>
                            <td>
                                <a href="/Region/Obrisi?regionID=@x.Value" class="btn btn-outline-danger">Obriši</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

