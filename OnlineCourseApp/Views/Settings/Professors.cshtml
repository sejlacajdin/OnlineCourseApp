@model List<ProfessorsVM>
@{
    ViewData["Title"] = "Professors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Settings")">Postavke</a>
            <i class="fa fa-chevron-right"></i>
        </li>
        <li>
            <span>Profesori</span>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-3">

        </div>
        <div class="col-md-3">

        </div>

        <div class="col-md-3">
            <button class="btn btn-primary btn-popup" data-container="body" data-modaltitle="Dodaj profesora" data-url="@Url.Action("AddProfessor","Settings")"><i class="fa fa-plus-circle"></i> Dodaj profesora</button>

        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered" style="background:white;">
            <thead>
                <tr>
                    <th scope="col">Ime i prezime</th>
                    <th scope="col">Korisničko ime</th>
                    <th scope="col">Email</th>
                    <th scope="col">Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                <tr>
                    <td class="text-center">@x.FullName</td>
                    <td class="text-center">@x.Username</td>
                    <td class="text-center">@x.Email</td>
                    <td class="text-center">
                        <a data-url="@Url.Action("EditUsers","Admin",new {userId=x.ID })" data-modal-header="none" class="cursor-pointer btn-popup"> <i class="fa fa-edit"></i> </a>
                        <a href="/Admin/DeleteUser?userId=@x.ID"> <i class="fa fa-trash-o"></i> </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>