@model CourseSectionEditVM
@{
    var courseType = (List<SelectListItem>)ViewData["courseType"];
    var courseParent = (List<SelectListItem>)ViewData["courseParent"];
}

<div class="col-md-12">
    <form asp-controller="CourseSection" asp-action="SpremiIzmjene" method="post">
        <div class="form-group" hidden>
            <label asp-for="CourseSectionID"></label>
            <input asp-for="CourseSectionID" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" autocomplete="off" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" autocomplete="off" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CourseTypeID"></label>
            <select asp-for="CourseTypeID" asp-items="courseType" class="form-control">
                <option disabled>(Odaberite tip kursa)</option>
            </select>
            <span asp-validation-for="CourseTypeID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CourseParentID"></label>
            <select asp-for="CourseParentID" asp-items="courseParent" class="form-control">
                <option>(Odaberite glavnu oblast)</option>
            </select>
            <span asp-validation-for="CourseParentID" class="text-danger"></span>
        </div>


        <div class="form-group text-center">
            <input type="submit" style="width:100%" class="btn btn-primary" value="Sačuvaj" id="submit">
        </div>
    </form>
</div>